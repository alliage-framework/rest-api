{
  "name": "@alliage/rest-api",
  "version": "1.0.0-beta.10",
  "description": "Alliage module to easily build REST APIs",
  "files": [
    "README.md",
    "LICENSE",
    "dist",
    "base-files"
  ],
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "publishConfig": {
    "access": "public"
  },
  "repository": "git@github.com:alliage-framework/rest-api.git",
  "author": "Boris LEBON <bo.lebon@gmail.com>",
  "license": "MIT",
  "scripts": {
    "download-openapi-schema": "sh scripts/download-openapi-schema.sh",
    "lint": "eslint . --ext .ts",
    "test:unit": "__ALLIAGE_REST_API_MODULE_PATH__=\"$PWD/src\" NODE_ENV=test jest --maxWorkers=2 --rootDir=. -c jest.config.js --coverage",
    "test:integration": "NODE_ENV=test jest --maxWorkers=2 --rootDir=. -c ./integration-tests/jest.config.js",
    "clean": "rm -rf ./dist",
    "build": "yarn clean && tsc -p tsconfig.json",
    "semantic-release": "semantic-release"
  },
  "alliageManifest": {
    "type": "module",
    "dependencies": [
      "@alliage/builder",
      "@alliage/config-loader",
      "@alliage/di",
      "@alliage/lifecycle",
      "@alliage/process-manager",
      "@alliage/module-installer",
      "@alliage/webserver"
    ],
    "installationProcedures": {
      "copyFiles": [
        [
          "base-files/main-config.yaml",
          "config/rest-api.yaml"
        ],
        [
          "base-files/openapi-specs-config.yaml",
          "config/rest-api-openapi-specs.yaml"
        ]
      ]
    }
  },
  "devDependencies": {
    "@alliage/core": "^0.1.0-beta.3",
    "@alliage/framework": "^1.0.0-beta.3",
    "@alliage/sandbox": "^1.0.0-beta.2",
    "@alliage/webserver": "^0.1.0-beta.0",
    "@alliage/webserver-express": "^0.1.0-beta.0",
    "@alliage/webserver-sandbox": "^0.1.0-beta.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/jest": "^27.4.1",
    "@types/js-yaml": "^4.0.5",
    "@types/lodash.clonedeep": "^4.5.7",
    "@types/node": "^17.0.0",
    "@typescript-eslint/eslint-plugin": "^5.20.0",
    "@typescript-eslint/parser": "^5.20.0",
    "eslint": "^8.13.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^2.7.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.0.0",
    "express": "^4.17.3",
    "jest": "^27.5.1",
    "js-yaml": "^4.1.0",
    "json-schema": "^0.4.0",
    "json-schema-to-typescript": "^13.0.1",
    "json2ts": "^0.0.7",
    "prettier": "^2.6.2",
    "semantic-release": "^21.0.2",
    "ts-jest": "^27.1.4",
    "ts-node": "^10.7.0",
    "typescript": "^4.5.3"
  },
  "dependencies": {
    "ajv": "^8.8.2",
    "ajv-formats": "^2.1.1",
    "comment-parser": "^1.3.0",
    "json-schema-to-ts": "^2.9.1",
    "lodash.clonedeep": "^4.5.0",
    "path-to-regexp": "^6.2.0",
    "ts-morph": "^13.0.2"
  }
}
